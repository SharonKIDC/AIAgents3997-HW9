# DeepFake Detector Configuration
# Copy this file to .env and fill in the values

# =====================================
# Model Configuration
# =====================================

# Hugging Face API token for downloading models (optional)
# Get your token from: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=

# Model cache directory
MODEL_CACHE_DIR=./models/cache

# Default detection model to use
# Options: efficientnet, xception, ensemble
DEFAULT_MODEL=efficientnet

# =====================================
# Processing Configuration
# =====================================

# Maximum video duration in seconds (longer videos will be truncated)
MAX_VIDEO_DURATION=300

# Frame sampling rate (process every Nth frame)
FRAME_SAMPLE_RATE=10

# Number of frames to analyze
NUM_FRAMES_TO_ANALYZE=30

# Batch size for inference
BATCH_SIZE=8

# =====================================
# Output Configuration
# =====================================

# Confidence threshold for fake detection (0.0 - 1.0)
CONFIDENCE_THRESHOLD=0.5

# Enable detailed analysis output
VERBOSE_OUTPUT=false

# Output format: json, text, or both
OUTPUT_FORMAT=text

# =====================================
# GPU Configuration
# =====================================

# Use GPU for inference if available
USE_GPU=true

# GPU device ID (for multi-GPU systems)
GPU_DEVICE_ID=0

# =====================================
# Logging Configuration
# =====================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path (leave empty for stdout only)
LOG_FILE=
